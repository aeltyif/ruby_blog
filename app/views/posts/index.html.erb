<h1>Posts</h1>

<table class="table table-hover">
  <thead>
    <tr class="active">
      <th>Title</th>
      <th>Body</th>
      <th>Author</th>
      <th colspan="3">
        <% if user_signed_in? %>
        <%= link_to 'New Post', new_post_path, :class => 'btn btn-default' %>
        <% end %>
      </th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td width="180"><%= post.title %></td>
        <td><%= truncate(post.body, :length => 150) %></td>
        <td width="150"><%= current_user.name %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
